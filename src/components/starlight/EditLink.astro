---
import { Icon } from '@astrojs/starlight/components';

const { editUrl } = Astro.locals.starlightRoute;
---

{
	editUrl && (
		<div class="sl-flex edit-links print:hidden">
			<span class="sl-flex">
				<a href={editUrl} class="sl-flex">
					<Icon name="pencil" size="1.2em" />
					{Astro.locals.t('page.editLink')}
				</a>
				{/* &nbsp;&nbsp; -- Link to CONTRIBUTING.md
				<a title="How to contribute and guidelines" target="_blank" href="https://github.com/Martin-Pitt/slua.dev/blob/main/CONTRIBUTING.md">(?)</a> */}
			</span>
			<a href={editUrl.toString().replace('/edit/', '/blame/')} class="sl-flex">
				<Icon name="seti:git" size="1.2em" />
				{Astro.locals.t('page.blameLink')}
			</a>
			<a href={editUrl.toString().replace('/edit/', '/commits/')} class="sl-flex">
				<Icon name="list-format" size="1.2em" />
				{Astro.locals.t('page.commitsLink')}
			</a>
		</div>
	)
}

<style>
	@layer starlight.core {
		a {
			gap: 0.5rem;
			align-items: center;
			text-decoration: none;
			color: var(--sl-color-gray-3);
		}
		a:hover {
			color: var(--sl-color-white);
		}
		
		.edit-links {
			gap: 1.6rem;
		}
	}
</style>